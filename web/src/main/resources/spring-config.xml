<?xml version="1.0" encoding="GBK"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
				        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
				        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
				        " default-autowire="byName">

    <!-- 属性文件读入 -->
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <!--                <value>classpath:common.properties</value>-->
            </list>
        </property>
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"></property>
    </bean>

    <context:component-scan base-package="com.jd"/>

    <import resource="classpath:jsf/jsf-service-consumer.xml"/>
    <import resource="classpath:spring-mvc-servlet.xml"/>

</beans>